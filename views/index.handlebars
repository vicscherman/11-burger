<div class=container>

  <div class="row">
    <div class="col-6">


<h2 style="color:Black">Burgers that are READY TO BE DEVOURED</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
  
    </div>
    <div class="col-6">
     
<h2 style="color:Black">DEVOURED BURGERS</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

    </div>
   
  </div>
</div>
<div class="container float-right">
<h2 style="color:Black">Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label style="color:Black" for="bn">Burger Name:</label>
    <input type="text" id="bn" name="name">
  </div>

  <div  style="color:Black" class="form-group">
    <label  style="color:Black"for="devour"> Has this burger been devoured already?</label><br>
    <input style="color:Black" type="radio" name="devoured" value="0" checked> Not Devoured!<br>
    <input  style="color:Black" type="radio" name="devoured" value="1"> Devoured!.
  </div>

  <button  type="submit">Add burger</button>
</form>
</div>
